<body>

<div class="toggle-container">
  <button class="toggle-button" onclick="toggleSPARQL()">▶ Mostra SPARQL query</button>
  <div id="sparqlToggle" class="toggle-content">
PREFIX dbo: &lt;http://dbpedia.org/ontology/&gt;
PREFIX dbr: &lt;http://dbpedia.org/resource/&gt;

SELECT ?painting ?title
WHERE {
  ?painting dbo:artist dbr:Benozzo_Gozzoli .
  ?painting dbo:title ?title .
}
LIMIT 10
  </div>
</div>

<script>
  let sparqlOpen = false;

  function toggleSPARQL() {
    const content = document.getElementById("sparqlToggle");
    const button = document.querySelector(".toggle-button");

    sparqlOpen = !sparqlOpen;

    content.style.display = sparqlOpen ? "block" : "none";
    button.innerHTML = sparqlOpen ? "▼ Nascondi SPARQL query" : "▶ Mostra SPARQL query";
  }
</script>

